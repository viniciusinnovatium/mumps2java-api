<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">


	<persistence-unit name="relational" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:jboss/datasources/relational</jta-data-source>
		<class>br.com.innovatium.mumps2java.model.Medpatient</class>
		<class>br.com.innovatium.mumps2java.model.MedpatientPK</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />

			<property name="eclipselink.weaving" value="static" />
			<property name="eclipselink.deploy-on-startup" value="True" />
		</properties>

	</persistence-unit>
</persistence>